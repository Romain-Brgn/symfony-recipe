{% extends 'base.html.twig' %}

{% block title %}Inscription NewsLetter{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow-md">
    <h1 class="text-2xl font-semibold mb-6 text-center">S'inscrire à la newsletter</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div>
            {{ form_label(form.username, 'Nom d’utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200'}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div>
            {{ form_widget(form.sinscrire, {'attr': {'class': 'w-full py-3 px-4 bg-indigo-600 text-white font-semibold rounded-xl hover:bg-indigo-700 transition'}}) }}
        </div>

    {{ form_end(form) }}
</div>
{% endblock %}
